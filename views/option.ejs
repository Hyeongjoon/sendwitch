<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>option</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' type="text/css" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/jQuery-ui/jquery-ui.css" type="text/css" media="all" />
	<script src="/jQuery/jquery-1.12.0.js" type="text/javascript"></script>
	<script src="/jQuery-ui/jquery-ui.js" ></script>
	<script src ='/javascripts/searchbarSrc.js'></script>	
	<script src ='/javascripts/optionSrc.js'></script>
  </head>
  <body>
<!--container-->
    <div id="yj-container">
      <div id="yj-nav">
			<img class="logo" src="../../사진/사진이다.jpg" onclick="location.href='/'" style="cursor: pointer">
      </div>

  <!--option content-->
      <div id="yj-content">
        <div id="sendwich-box">
          <h3>SendwicH</h3>
        </div>
  <!--new-option-->
        <div id="option-accordion">

          <div id="option-menu1" class="option-menu">
            private
            <div id="option-p">
              <input id="option-passwordok" type="button" value="ok" onclick="chkPassword('<%=inform.email%>')" style="cursor: pointer">
              <input id="option-password" type="password">
              <div id="optiontext-password">
            password
              </div>
            </div>
          </div>
            <ul class="option-submenu" id="passwordworng"><li><div>it is wrong password</div></li></ul>
            <ul class="option-submenu" id="passwordCorrect">
              <li>
                <div id="o-menu1-submenu1">
                  password 재설정
                  <input id="submenu1-password"type="password" tabindex="1">
                </div>
              </li>
              <li>
                <div id="o-menu1-submenu2">
                  password 확인
                  <input id="submenu2-passwordok" type="button" value="변경" tabindex="3">
                  <input id="submenu2-password"type="password" tabindex="2">
                </div>
              </li>
              <li>
                <div id="o-menu1-submenu3">
                  facebook과 연동
                  <input id="submenu3-link" type="button" value="연동하기" tabindex="4">
                </div>
              </li>
              <li>
                <div id="o-menu1-submenu4">
                  회원탈퇴
                  <input id="submenu4-resign" type="button" value="탈퇴하기" tabindex="5">
                </div>
              </li>
            </ul>
           

          <div id="option-menu2" class="option-menu" style="cursor: pointer">
            page language
          </div>
            <ul class="option-submenu">
              <li>
                <div id="o-menu2-submenu1">
                language
                  <input id="submenu1-change1" type="button" value="수정">
                  <select id="submenu1-select1">
                    <option value="korean">한국어</option>
                    <option value="english">English</option>
                    <option value="japanese">Japanese</option>
                    <option value="chinese">Chinese</option>
                  </select>
                </div>
              </li>
            </ul>
         

          <div id="option-menu3" class="option-menu" style="cursor: pointer">
            searching language
          </div>
            <ul class="option-submenu">
              <li>
                <div id="o-menu3-submenu1">
                default language
                  <input id="submenu1-change2" type="button" value="수정">
                  <select id="submenu1-select2">
                    <option value="korean">한국어</option>
                    <option value="english">English</option>
                    <option value="japanese">Japanese</option>
                    <option value="chinese">Chinese</option>
                  </select>
                </div>
              </li>
              <li>
                <div id="o-menu3-submenu2">
                 additional language
                  <input id="submenu2-add" type="button" value="추가">
                  <select id="submenu2-select3">
                    <option value="korean">한국어</option>
                    <option value="english">English</option>
                    <option value="japanese">Japanese</option>
                    <option value="chinese">Chinese</option>
                  </select>
                </div>
              </li>
              <li>
                <div id="o-menu3-submenu3">
                  default
                    <div id="defaultL"><%=inform.dLang%></div>
                    </div>
              </li>
              <li>
                  <div id="o-menu3-submenu4">
                    additional
                    <div id = "additionL"><%if(inform.addLang!==''){
                     var tmp = inform.addLang.split(' ');
                    	for(var i = 0 ; i < tmp.length ; i++){
                    %>
                    <a class="option-addition" style="cursor: pointer" ><%=tmp[i]%></a>
                    <%}} else {%>
                    <a id ="noAddLang" >no Language</a><%}%>
                    </div>
                  </div>
              </li>
            </ul>
            
          <div id="option-menu4" class="option-menu" style="cursor: pointer">
            차단사용자 관리
          </div>
            <ul class="option-submenu" id = "prohibit">
            <% if(inform.prohibit_account!==''){
              var prohibit = inform.prohibit_account.split(' ');
              	for(var i = 0 ; i < prohibit.length ; i++){       	
              %>
              <li id="prohibitNick<%=i%>">
                <div id="o-menu4-submenu1">
                  <%=prohibit[i]%>
                  <div id="submenu1-nickname">
                    <div id="prohibit-delete" style="cursor: pointer" onclick="deleteNick(<%=i%> , '<%=prohibit[i]%>')">
                    x
                    </div>
                  </div>
                </div>
              </li>
              <%}} else {%>
              <li id="prohibitNick">
                <div id="o-menu4-submenu1">
                  차단 사용자가 없습니다.
                </div>
              </li><%}%>
            </ul>
        </div>
      </div>
     
      
<!--go to main logo-->
        <div id="goToTopLogo" onclick="window.scrollTo(0,0)" style="cursor: pointer">
      </div>

<!--menubar-->
        <div id="yj-menubar">
        <ul class="menubar">
          <li id="menu" class="menu-li"><a href="#">menu</a>
            <ul>
              <li><a href="/myPage">my page</a></li>
              <li><a href="/chatMain">chat</a><a id="menu_alram"><%=inform.alram%></a></li>
              <li><a href="#">search by map</a></li>
              <li><a href="/option">option</a></li>
              <li><a href="/main">go to main</a></li>
              <li><a href="/logout">Logout</a></li>
            </ul>
          </li>
          <li id="searchbar" class="menu-li">
            <input type="search" id="i-searchbar">
          </li>
          <li id="calender1" class="menu-li">
            <input type="button" id="from">
          </li>
          <p id="flow">~</p>
          <li id="calender2" class="menu-li">
            <input type="button" id="to">
          </li>
          <li id="searchbutton" class="menu-li">
            <input id="i-searchbutton" type="button" value="search" onclick="addSearching()" style="cursor: pointer">
          </li>
        </ul>
      </div>
      <input id="selectedCityName" type="hidden">
    <input id="selectedCountryName" type="hidden">
    <input id="selectedCityId" type="hidden">
    </div>
    <script src="http://<%=socketIP%>:3001/socket.io/socket.io.js"></script>
    <script src ='/javascripts/connectionSrc.js'></script>
    <audio id='beepSound' src='/sound/beep.mp3' preload="auto"></audio>
  </body>
</html>